
= render "goods/header"

.main
  = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
    .card-content
      = render "users/mypage-side"
      .card-content__main
        %h2.card-content__main__top クレジットカード情報入力
        .group
          .group__text
            .group__text__main
              カード番号
            .group__text__require
              必須
          = text_field_tag "number", "", class: "card_registration", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          %ul.card_lists
            -@bland.each do |bland|
              %li.card_lists__icon
                =image_tag bland, class:"bland_logo"
          .group
            .group__text
              .group__text__main
                有効期限
              .group__text__require
                必須
            .group__form
              %select#exp_month{name: "exp_month", type: "text", class: "select_tag"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月
              %select#exp_year{name: "exp_year", type: "text", class: "select_tag"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
          .group
            .group__text
              .group__text__main
                セキュリティコード
              .group__text__require
                必須
            .group__form
              = text_field_tag "cvc", "", class: "card_registration", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              .group__form--require
                =link_to "#", class:"require" do
                  カード裏面の番号とは？
          .registration
            .registration__btn
              #card_token
              = submit_tag "追加する", id: "token_submit"

=render "goods/indfooter"

