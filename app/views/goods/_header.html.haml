.top-header
  .main-header
    .main-header__top
      %h1.main-header__top__icon
        = link_to root_path do
          = image_tag "logo.png",size: '134x36',alt:"FURIMA"
      .main-header__top__searchbox
        .main-header__top__searchbox__input-box
          %input{type: "text", class: "main-header__top__searchbox__input-box__text", placeholder: "キーワードから探す"}
          %button{title: "検索", type: "submit", class: "main-header__top__searchbox__input-box__submit-btn"}
            = image_tag "icon-search 1.png",size: '19x19',alt:"FURIMA"
    .main-header__nav
      %ul.main-header__nav__left
        %li.main-header__nav__left__category
          = link_to "#" do
            %span カテゴリ
        %li.main-header__nav__left__brand
          = link_to "#" do
            %span ブランド
      %ul.main-header__nav__right
        -if user_signed_in?
          %li.main-header__nav__right
            = link_to "マイページ", user_path(current_user)
          %li.main-header__nav__right
            = link_to "ログアウト", destroy_user_session_path, method: :delete
        -else 
          %li.main-header__nav__right
            =link_to "新規登録", new_user_registration_path
          %li.main-header__nav__right
            = link_to "ログイン", new_user_session_path 
       